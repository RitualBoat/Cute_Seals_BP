{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.seal.move": {
      "initial_state": "on_ground",
      "states": {
        "on_ground": {
          "animations": [
            { "idle": "!query.is_moving" },
            { "walk": "query.is_moving" }
          ],
          "blend_transition": 0.2,
          "transitions": [
            {
              "frozen": "query.property('my:is_rolling') || query.property('my:is_clapping') || query.property('my:is_tickled')"
            },
            { "in_water": "query.is_in_water" }
          ]
        },
        "in_water": {
          "animations": [
            { "swim": "query.is_moving" },
            { "idle": "!query.is_moving" }
          ],
          "blend_transition": 0.2,
          "transitions": [
            {
              "frozen": "query.property('my:is_rolling') || query.property('my:is_clapping') || query.property('my:is_tickled')"
            },
            { "on_ground": "!query.is_in_water" }
          ]
        },
        "frozen": {
          "blend_transition": 0.2,
          "transitions": [
            {
              "on_ground": "!query.property('my:is_rolling') && !query.property('my:is_clapping') && !query.property('my:is_tickled') && !query.is_in_water"
            },
            {
              "in_water": "!query.property('my:is_rolling') && !query.property('my:is_clapping') && !query.property('my:is_tickled') && query.is_in_water"
            }
          ]
        }
      }
    },
    "controller.animation.seal.look": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": ["look_at_target"]
        }
      }
    },
    "controller.animation.seal.clap": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [{ "clapping": "query.property('my:is_clapping')" }],
          "blend_transition": 0.2
        },
        "clapping": {
          "animations": ["clap"],
          "transitions": [{ "default": "!query.property('my:is_clapping')" }],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.seal.tickle": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [{ "tickled": "query.property('my:is_tickled')" }],
          "blend_transition": 0.15
        },
        "tickled": {
          "animations": ["tickle"],
          "transitions": [{ "default": "!query.property('my:is_tickled')" }],
          "blend_transition": 0.15
        }
      }
    },
    "controller.animation.seal.roll": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [{ "rolling": "query.property('my:is_rolling')" }],
          "blend_transition": 0.2
        },
        "rolling": {
          "animations": ["roll"],
          "transitions": [{ "default": "!query.property('my:is_rolling')" }],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.seal.baby": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [{ "baby": "query.is_baby" }],
          "blend_transition": 0.2
        },
        "baby": {
          "animations": ["baby_transform"],
          "transitions": [{ "default": "!query.is_baby" }],
          "blend_transition": 0.2
        }
      }
    }
  }
}
